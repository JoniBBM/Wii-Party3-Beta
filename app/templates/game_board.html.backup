                    GAME_STATE.isAnimatingCamera = false;
                    GAME_STATE.playerTurnInProgress = false;
                    this.stopCameraFollow();
                    this.prepareNextPlayerTurn(false);
                }
            } else if (event.key.toLowerCase() === 'f') {
                this.toggleFullscreen();
